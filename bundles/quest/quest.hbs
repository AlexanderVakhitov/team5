<h1 class="page-header">{{name}}</h1>
<div class="container-fluid quest">
    <img class="col-sm-offset-2 col-sm-8 col-xs-12 img-responsive quest__main-img" src={{url}} />
    <div class="col-xs-12 col-sm-12 quest__description lead">{{description}}</div>
    {{> comment/comment }}
    {{#each pictures}}
        <div class="quest__one-picture col-sm-offset-3 col-xs-12 col-sm-6">
            <h3 class="quest__header">{{name}}</h3>
            <img class="quest__img img-responsive" src={{url}} />
            {{> comment/comment }}
        </div>
    {{/each}}
</div>
