.quest {
  &__description {
      text-align: justify;
      margin-top: 10px;
      padding: 20px;
  }

  &__main-part {
    background-color: #fff;
    width: 100%;
    margin: 0;
    padding: 5px;
  }

  &__main-img {
    object-fit: cover;
    overflow: hidden;
    height: 90vh;
    width: 100%;
    margin: 0;
    padding: 0;
  }
}


@media screen and (max-width: 767px) and (max-device-width: 767px) {
  .quest {
    &__main-img {
      height: 50vh;
      width: 100%;
    }
  }
  
  &__manage {
    clear: both;
  }
}
