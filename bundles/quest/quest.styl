.quest {
  &__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    flex-wrap: wrap;
  }

  &__pictures-list {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    background-color: #fff;
  }

  &__description {
    text-align: justify;
    margin-top: 10px;
    margin-bottom: 0;
    padding: 20px;
    font-size: 1.7rem;
  }

  &__main-part {
    background-color: #fff;
    width: 100%;
    margin: 0;
    padding: 5px;
  }

  &__main-img {
    object-fit: cover;
    overflow: hidden;
    height: 90vh;
    width: 100%;
    margin: 0;
    padding: 0;
  }

  &__manage {
    clear: both;
    margin-top: 10px;
  }

  &__checkin-filter {
    font-size: 0.3em;
  }

  &-main__attributes {
    display: flex;
    position: relative;
    bottom: 0;
  }

  &__one-picture {
    flex-direction: column;
    padding: 10px;
  }

  &-modal {
    &__content {
      border-radius: 0;
    }
    &__img {
      overflow: hidden;
      width: auto;
      height: 100vh;
      object-fit: cover;
      margin: auto;
    }

    &__header {
      width: 100%;
      text-align: center;
    }
  }

  &__miniature-img {
    width: 100%;
    height: 45vh;
    object-fit: cover;
    overflow: hidden;
  }
}

@media screen and (max-width: 767px) and (max-device-width: 767px) {
  .quest {
    &-modal {
      &__img {
        height: auto;
        width: 100%;
      }
    }

      &__main-img {
      height: 300px;
      width: 100%;
    }

    &__miniature-img {
      height: 250px;
    }
  }
}

@media screen and (max-height: 380px) and (max-device-height: 380px){
  .quest {
    &__miniature-img {
      height: 60vh;
    }
  }
}
