.header {
  position: absolute;
  top: 0;
  width: 100%;
  height: 60px;
  text-transform: uppercase;
  color: #fff;
  border-color: #064A76;
  background-color: #064A76;

  &__name-app {
    font-size: 20px;
    color: #fff;
    font-weight: 700;
    font-family: "Montserrat", "Helvetica Neue", Helvetica, Arial, sans-serif;
    margin-top: -15px;
    &:before {
      content: url("/pictures/research-36.png");
    }
  }


  &__img {
    width: 40px;
  }

  &__container {
    margin: 5px;
  }
}
