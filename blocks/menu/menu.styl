.quest-menu {
  background-color: #064A76 !important;
  position: fixed !important;
  top: 0;
  bottom: 0;
  left: 0;
  margin-top: -5px;
  display: block;
  padding: 50px 20px 20px 20px;
  overflow-x: hidden;
  overflow-y: auto;
  //border-right: 1px solid #eee;
  text-transform: uppercase;
  color: #ffffff !important;

  &__menu-list {
    margin: 15px -25px 15px;
    list-style: none;
    cursor: pointer;
  }


  &__menu-elem {
    margin: 10px 0 10px 0;
    background-color: #ed5223;
    padding: 0;
    cursor: pointer;
  }

  &__refer:hover {
    background-color: #f4a460;
  }

  &__refer {
    background-color: #ed5223;
    display: block;
    padding: 15px;
    color: #ffffff !important;
    text-decoration: none;
    }
  &__refer:hover {
    text-decoration: none;

  }


}

@media screen and (max-width: 768px) and (max-device-width: 768px){
  .quest-menu {
    position: relative !important;
    margin-top: -30px;

    &__menu-list {
      margin-left: -33px;
      margin-top: -50px;
      margin-right: -9px;
    }
  }
}
