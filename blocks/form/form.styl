.quest-form {
  margin: 10px;
  border-radius: 1px;

  &__input-name {
    //display: none;
  }

  &__photo-header {
    text-align: center;
    padding: 30px;
  }

  &__main-quest-data {
    //margin: 10px;
  }

  &__form-elem {
    margin: 10px;
    background-color: #fff;
  }

  &__none {
    display: none;
  }

  &__button {
    background-color: #ed5223;
    border-width: 0;
    font-size: 1em;
    color: #fff;
    border-radius: 0;
    padding: 10px;
    text-transform: uppercase;
  }

  &__button:hover {
    background-color: #f4a460;
  }

  &__centred-container {
    display: flex;
    justify-content: center;
    margin: 10px;
  }
}

@media screen and (max-device-width: 768px) and (max-width: 768px) {
  .quest-form {
    &__form-elem  {
      font-size: 0.7em;
    }
  }
}
